<style>
  .footer {
    background-color: var(--color-dark-gray);
    padding: 4rem 0 2rem;
    margin-top: 5rem;
  }
  
  .footer-content {
    display: grid;
    gap: 3rem;
  }
  
  .footer-title {
    font-family: var(--font-marker);
    color: var(--color-red);
    margin-bottom: 1rem;
  }
  
  .footer-tagline {
    font-style: italic;
    max-width: 500px;
  }
  
  .footer-links {
    display: grid;
    gap: 2rem;
  }
  
  .footer-section h4 {
    color: var(--color-yellow);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    background-color: var(--color-red);
    transform: translateY(-3px);
  }
  
  @media (min-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr 2fr;
    }
    
    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
