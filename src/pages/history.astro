<style>
  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    font-weight: 900;
  }
  
  .lyrics-section {
    padding: 4rem 0;
  }
  
  .lyrics-container {
    max-width: 800px;
    margin: 0 auto 5rem;
    text-align: center;
  }
  
  .lyrics {
    font-size: 1.1rem;
    line-height: 1.8;
    white-space: pre-line;
  }
  
  .timeline-section {
    background-color: var(--color-dark-gray);
    padding: 5rem 0;
  }
  
  .timeline {
    position: relative;
    max-width: 1000px;
    margin: 4rem auto 0;
  }
  
  .timeline::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 100%;
    background-color: var(--color-red);
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 4rem;
    width: 100%;
  }
  
  .timeline-date {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-red);
    color: var(--color-white);
    padding: 0.5rem 1rem;
    font-weight: 700;
    border-radius: 20px;
    z-index: 2;
  }
  
  .timeline-content {
    position: relative;
    width: 45%;
    padding: 2rem;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    margin-top: 2rem;
  }
  
  .timeline-item:nth-child(odd) .timeline-content {
    margin-left: auto;
  }
  
  .timeline-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-yellow);
  }
  
  .founder-section {
    padding: 5rem 0;
  }
  
  .founder-content {
    display: grid;
    gap: 3rem;
    align-items: center;
  }
  
  .image-placeholder {
    width: 100%;
    height: 400px;
    background-color: var(--color-dark-gray);
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-size: 1.5rem;
  }
  
  .image-placeholder::after {
    content: 'Founder Image';
    opacity: 0.5;
  }
  
  .founder-quote {
    font-size: 1.5rem;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 2rem;
  }
  
  .founder-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-red);
  }
  
  @media (max-width: 768px) {
    .timeline::before {
      left: 30px;
    }
    
    .timeline-date {
      left: 30px;
      transform: translateX(-50%);
    }
    
    .timeline-content {
      width: calc(100% - 80px);
      margin-left: 80px !important;
    }
  }
  
  @media (min-width: 768px) {
    .founder-content {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
