<style>
  .partners-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem;
  }
  
  .section-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    font-weight: 900;
  }
  
  .intro-text {
    font-size: 1.25rem;
    line-height: 1.6;
  }
  
  .partners-grid {
    display: grid;
    gap: 4rem;
    margin-top: 4rem;
  }
  
  .partner-category {
    margin-bottom: 2rem;
  }
  
  .category-title {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--color-yellow);
    position: relative;
    display: inline-block;
  }
  
  .category-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100%;
    height: 3px;
    background-color: var(--color-red);
  }
  
  .tools-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .tool-card {
    background-color: var(--color-dark-gray);
    padding: 2rem;
    border-radius: 5px;
    transition: transform 0.3s ease;
  }
  
  .tool-card:hover {
    transform: translateY(-5px);
  }
  
  .tool-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .tool-name {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-white);
  }
  
  .tool-description {
    font-size: 1rem;
    line-height: 1.5;
  }
  
  .agency-partners {
    background-color: var(--color-dark-gray);
    padding: 5rem 0;
    text-align: center;
  }
  
  .agencies-grid {
    display: grid;
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .agency-card {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 2.5rem;
    border-radius: 5px;
    text-align: left;
    transition: transform 0.3s ease;
  }
  
  .agency-card:hover {
    transform: translateY(-5px);
  }
  
  .agency-name {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    color: var(--color-red);
  }
  
  .agency-specialty {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-yellow);
  }
  
  .agency-description {
    font-size: 1rem;
    line-height: 1.5;
  }
  
  .partner-cta {
    text-align: center;
    padding: 5rem 0;
  }
  
  .cta-text {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  .btn-large {
    font-size: 1.25rem;
    padding: 1.25rem 2.5rem;
  }
  
  @media (min-width: 768px) {
    .tools-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .agencies-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
